  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>specview.html</welcome-file>
  </welcome-file-list>


    <servlet>
        <servlet-name>ProxyServlet2</servlet-name>
        <servlet-class>uk.ac.ebi.pride.web.util.servlet.proxy.ProxyServlet</servlet-class>
        <init-param>
            <param-name>proxyHost</param-name>
            <param-value>localhost</param-value>
        </init-param>
        <init-param>
            <param-name>proxyPort</param-name>
            <param-value>8084</param-value>
        </init-param>
        <init-param>
            <param-name>proxyPath</param-name>
            <param-value>/nmr-rest</param-value>
        </init-param>
        <init-param>
            <param-name>maxFileUploadSize</param-name>
            <param-value>5242880</param-value> <!-- 5MB in bytes -->
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProxyServlet2</servlet-name>
        <url-pattern>/nmr-rest/*</url-pattern>
    </servlet-mapping>
</web-app>
