<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 2.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_2_0.dtd">


<!-- Here in tiles.xml we have define a template base.definition. This layout 
	contains attributes such as Header, Title, Body, Menu and Footer. The layout 
	is then extended and new definitions are added per page. -->

<tiles-definitions>
	<definition name="base.definition" template="/WEB-INF/jsp/layout.jsp">
		<put-attribute name="title" value="" />
		<put-attribute name="header" value="/WEB-INF/jsp/header.jsp" />
		<put-attribute name="body" value="" />
		<put-attribute name="bodyleft" value="" />
		<put-attribute name="footer" value="/WEB-INF/jsp/footer.jsp" />
	</definition>

	<definition name="index" extends="base.definition">
		<put-attribute name="title" value="MetaboLights - Metabolomics Portal" />
		<put-attribute name="body" value="/WEB-INF/jsp/index.jsp" />
	</definition>

	<definition name="about" extends="base.definition">
		<put-attribute name="title" value="About MetaboLights" />
		<put-attribute name="body" value="/WEB-INF/jsp/about.jsp" />
	</definition>
	
	<definition name="contact" extends="base.definition">
		<put-attribute name="title" value="Contact MetaboLights" />
		<put-attribute name="body" value="/WEB-INF/jsp/contact.jsp" />
	</definition>

    <definition name="login" extends="base.definition">
        <put-attribute name="title" value="Log in to MetaboLights" />
        <put-attribute name="body" value="/WEB-INF/jsp/login.jsp" />
    </definition>

    <definition name="error" extends="base.definition">
        <put-attribute name="title" value="Error" />
        <put-attribute name="body" value="/WEB-INF/jsp/error.jsp" />
    </definition>

    <definition name="submit" extends="base.definition">
        <put-attribute name="title" value="MetaboLights file upload for submission" />
        <put-attribute name="body" value="/WEB-INF/jsp/submit.jsp" />
    </definition>
    
    <definition name="submitHelp" extends="base.definition">
        <put-attribute name="title" value="MetaboLights - How to upload files for submission" />
        <put-attribute name="body" value="/WEB-INF/jsp/submitHelp.jsp" />
    </definition>

    <definition name="biisubmit" extends="base.definition">
        <put-attribute name="title" value="MetaboLights ISA-archive upload for submission" />
        <put-attribute name="body" value="/WEB-INF/jsp/biisubmit.jsp" />
    </definition>

    <definition name="forgotPassword" extends="base.definition">
        <put-attribute name="title" value="MetaboLights password lost" />
        <put-attribute name="body" value="/WEB-INF/jsp/forgotPassword.jsp" />
    </definition>

    <definition name="submitError" extends="base.definition">
		<put-attribute name="title" value="Submission error"/>
		<put-attribute name="body" value="/WEB-INF/jsp/submitError.jsp"/>
    </definition>

    <definition name="submitOk" extends="base.definition">
        <put-attribute name="title" value="MetaboLights upload successful" />
        <put-attribute name="body" value="/WEB-INF/jsp/submitOk.jsp" />
    </definition>

    <definition name="entry" extends="base.definition">
        <put-attribute name="title" value="MetaboLights entry" />
        <put-attribute name="body" value="/WEB-INF/jsp/entry.jsp" />
    </definition>

    <definition name="timeout" extends="base.definition">
        <put-attribute name="title" value="Timed out of MetaboLights" />
        <put-attribute name="body" value="/WEB-INF/jsp/timeout.jsp" />
    </definition>

    <definition name="createAccount" extends="base.definition">
        <put-attribute name="title" value="Create a new account for MetaboLights" />
        <put-attribute name="body" value="/WEB-INF/jsp/createAccount.jsp" />
    </definition>

    <definition name="accountRequested" extends="base.definition">
        <put-attribute name="title" value="Account information" />
        <put-attribute name="body" value="/WEB-INF/jsp/accountRequested.jsp" />
    </definition>

    <definition name="updateAccount" extends="base.definition">
        <put-attribute name="title" value="My Account" />
        <put-attribute name="body" value="/WEB-INF/jsp/updateAccount.jsp" />
    </definition>

    <definition name="searchResult" extends="base.definition">
        <put-attribute name="title" value="MetaboLights search results" />
        <put-attribute name="body" value="/WEB-INF/jsp/searchResults.jsp" />
		<put-attribute name="bodyleft" value="/WEB-INF/jsp/searchFilter.jsp" />
    </definition>

    <definition name="download" extends="base.definition">
		<put-attribute name="title" value="Download Public Experiments" />
		<put-attribute name="body" value="/WEB-INF/jsp/download.jsp" />
	</definition>
    
    <definition name="searchFilter"> <!--  Is this still used? -->
        <put-attribute name="searchFilter" value="/WEB-INF/jsp/searchFilter.jsp" />
    </definition>
	
	<definition name="updateStudy" extends="base.definition">
        <put-attribute name="title" value="Update study" />
        <put-attribute name="body" value="/WEB-INF/jsp/updateStudy.jsp" />
    </definition>
    
    <definition name="submitPre" extends="base.definition">
        <put-attribute name="title" value="MetaboLight study submission" />
        <put-attribute name="body" value="/WEB-INF/jsp/submitPre.jsp" />
    </definition>

	<definition name="taggedText" template="/WEB-INF/jsp/taggedText.jsp"/>

</tiles-definitions>
