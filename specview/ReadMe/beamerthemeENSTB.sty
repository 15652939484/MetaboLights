\defbeamertemplate*{frametitle}{enstb theme}%[1][left]
{
  \ifbeamercolorempty[bg]{frametitle}{}{\nointerlineskip}%
  \@tempdima=\textwidth%
  \advance\@tempdima by\beamer@leftmargin%
  \advance\@tempdima by\beamer@rightmargin%
  \begin{beamercolorbox}[sep=0.3cm,left,rightskip=0pt,wd=\the\@tempdima]{frametitle}
    \usebeamerfont{frametitle}%
    \vbox{}\vskip-1ex%
    \if@tempswa\else\csname beamer@fteleft\endcsname\fi%
    \strut\insertframetitle\hfill\insertframenumber{} / \inserttotalframenumber\strut\par%
    {%
      \ifx\insertframesubtitle\@empty%
      \else%
      {\usebeamerfont{framesubtitle}\usebeamercolor[fg]{framesubtitle}\insertframesubtitle\strut\par}%
      \fi
    }%
    \vskip-1ex%
    \if@tempswa\else\vskip-.3cm\fi% set inside beamercolorbox... evil here...
  \end{beamercolorbox}%
}

\defbeamertemplate*{footline}{enstb theme}{}

\defbeamertemplate*{headline}{enstb theme}
{
  \leavevmode%
  \hbox{%
    \begin{beamercolorbox}[wd=\paperwidth,ht=2.25ex,dp=1ex,center]{section in head/foot}%
      \usebeamerfont{section in head/foot}\insertsectionnavigationhorizontal{.9\paperwidth}{}{}
    \end{beamercolorbox}}%
  \vskip0pt%
}

\setbeamersize{text margin left=1em,text margin right=1em}
\setbeamertemplate{navigation symbols}{}

\defbeamertemplate*{title page}{mytitle}[1][]
{
  \vbox{}
  \vfill
  \begin{centering}
    {\usebeamercolor[fg]{titlegraphic}\inserttitlegraphic\par}
    \vskip1.5em
    \begin{beamercolorbox}[sep=8pt,center,#1]{title}
      \usebeamerfont{title}\Huge\enstb@var@titre\par%
      \ifx\enstb@var@soustitre\@empty%
      \else%
      \vskip0.25em%
      {\usebeamerfont{subtitle}\usebeamercolor[fg]{subtitle}\enstb@var@soustitre\par}%
      \fi%     
    \end{beamercolorbox}%
    \vskip1em\par
    \begin{beamercolorbox}[sep=8pt,center,#1]{title text}
      \usebeamerfont{author}\insertauthor
    \end{beamercolorbox}
    \begin{beamercolorbox}[sep=8pt,center,#1]{title text}
      \usebeamerfont{institute}
      ENST Bretagne
    \end{beamercolorbox}
    \vskip5em\par
    \begin{beamercolorbox}[sep=8pt,center,#1]{title text}
      \usebeamerfont{institute}
      \scriptsize \enstb@var@type{} -- %
      \ifx\enstb@var@code\@empty%
      \enstb@var@matiere{} %
      \else%
      \enstb@var@code{} %
      \fi%
      \ifx\enstb@var@numero\@empty%
      \else%
      -- \enstb@var@numero{}%
      \fi%
        \hfill\hfill\hfill\hfill\hfill\hfill \insertdate
    \end{beamercolorbox}
  \end{centering}
}

