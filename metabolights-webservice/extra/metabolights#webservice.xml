<Context className="org.apache.catalina.core.StandardContext"
        cachingAllowed="true"
        charsetMapperClass="org.apache.catalina.util.CharsetMapper"
        crossContext="false"
        debug="1"
        docBase="//nfs/production/panda/metabolights/deploy/metabolights-webservice.war"
        mapperClass="org.apache.catalina.core.StandardContextMapper"
        path="/metabolights/webservice"
        privileged="false"
        reloadable="true"
        swallowOutput="true"
        useNaming="true"
        wrapperClass="org.apache.catalina.core.StandardWrapper"
        unpackWAR="false">

  <!-- Stop sessions being recovered from disk on server restart. -->
  <Manager className="org.apache.catalina.session.StandardManager" pathname=""/>

  <ResourceLink  name="isatabConfigurationLocation" global="isatabConfigurationLocation" type="java.lang.String"/> 
  <ResourceLink  name="publicStudiesLocation" global="publicStudiesLocation" type="java.lang.String"/> 
  <ResourceLink  name="privateStudiesLocation" global="privateStudiesLocation" type="java.lang.String"/> 
</Context>
